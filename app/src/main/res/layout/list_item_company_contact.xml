<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_elevation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin_extra_small"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/activity_margin_extra_small"
            android:text="Coming soon..."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/rlContactPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle">

            <ImageView
                android:id="@+id/ivContactPerson"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_person"/>
            <TextView
                android:id="@+id/tvContactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivContactPerson"
                android:layout_toRightOf="@+id/ivContactPerson"
                android:gravity="center_vertical"
                android:text="Coming soon..."
                android:textColor="@color/app_text_color_dark"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlContactPerson">
            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_phone"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivPhone"
                android:layout_toRightOf="@+id/ivPhone">
                <TextView
                    android:id="@+id/tvPhone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nbbbnmm"
                    android:textColor="@color/app_text_color_dark"
                    android:textSize="@dimen/text_size_small"/>
                <TextView
                    android:id="@+id/tvPhone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPhone1"
                    android:layout_marginTop="@dimen/activity_margin_extra_small"
                    android:orientation="vertical"
                    android:text="nbbbnmm"
                    android:textColor="@color/app_text_color_dark"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivPhone"
                android:layout_toRightOf="@+id/ivPhone"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlPhone">
            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_time"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivTime"
                android:layout_toRightOf="@+id/ivTime"
                android:text="nbbbnmm"
                android:textColor="@color/app_text_color_dark"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTime">

            <ImageView
                android:id="@+id/ivEmail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_email"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivEmail"
                android:layout_toRightOf="@+id/ivEmail"
                android:gravity="center_vertical"
                android:text="Coming soon..."
                android:textColor="@color/app_text_color_dark"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlEmail"
            android:visibility="visible">
            <ImageView
                android:id="@+id/ivWebsite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_website"/>

            <TextView
                android:id="@+id/tvWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivWebsite"
                android:layout_toRightOf="@+id/ivWebsite"
                android:gravity="center_vertical"
                android:text="Coming soon..."
                android:textColor="@color/app_text_color_dark"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlWebsite">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_margin_extra_small"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/tvFullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivLocation"
                android:layout_toRightOf="@+id/ivLocation"
                android:text="Coming soon..."
                android:textColor="@color/app_text_color_dark"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>